{
  "name": "gygax-bot-telegram",
  "version": "1.0.0",
  "engines": {
    "node": "24.x"
  },
  "private": true,
  "description": "Telegram Bot meant to assist in various ways- focusing on helper commands for Dungeons and Dragons.",
  "main": "index.js",
  "scripts": {
    "compile": "rimraf output && tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon --watch",
    "switch_to_dev": "export $(cat .env | xargs) && wget --spider https://api.telegram.org/bot$TOKEN/setWebhook?url= --delete-after && node index.js",
    "postinstall": "npm run compile"
  },
  "author": "Volodymyr Lut",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^24.1.0",
    "@types/node-telegram-bot-api": "^0.64.9",
    "body-parser": "^2.2.0",
    "canvas": "^3.1.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "googleapis": "^154.0.0",
    "node-telegram-bot-api": "^0.66.0",
    "rimraf": "^6.0.1",
    "scryfall-sdk": "^5.0.3",
    "tough-cookie": "^4.1.4",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.16"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [],
    "exec": "rimraf output && tsc && node index.js"
  }
}
